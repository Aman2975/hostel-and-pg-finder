<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Hostels</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .admin-container {
            min-height: 100vh;
        }
        .sidebar {
            background: linear-gradient(180deg, #2c3e50 0%, #34495e 100%);
            min-height: 100vh;
            padding: 0;
        }
        .sidebar .nav-link {
            color: #ecf0f1;
            padding: 1rem 1.5rem;
            border-radius: 0;
            transition: all 0.3s ease;
        }
        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            background: rgba(52, 152, 219, 0.2);
            color: #3498db;
        }
        .main-content {
            background: #f8f9fa;
            min-height: 100vh;
            padding: 2rem;
        }
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            margin-bottom: 1.5rem;
        }
        .card-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 15px 15px 0 0 !important;
            border: none;
        }
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            padding: 0.75rem 1.5rem;
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }
        .table {
            background: white;
            border-radius: 10px;
            overflow: hidden;
        }
        .table thead th {
            background: #f8f9fa;
            border: none;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <div class="row g-0">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar">
                <div class="p-3">
                    <h5 class="text-white mb-4">
                        <i class="fas fa-tachometer-alt me-2"></i>Admin Panel
                    </h5>
                </div>
                <nav class="nav flex-column">
                    <a class="nav-link" href="/admin/dashboard">
                        <i class="fas fa-chart-pie me-2"></i>Dashboard
                    </a>
                    <a class="nav-link" href="/admin/students">
                        <i class="fas fa-users me-2"></i>Students
                    </a>
                    <a class="nav-link active" href="/admin/hostels">
                        <i class="fas fa-building me-2"></i>Hostels
                    </a>
                    <a class="nav-link" href="/admin/pgs">
                        <i class="fas fa-home me-2"></i>PGs
                    </a>
                    <a class="nav-link" href="/admin/allotments">
                        <i class="fas fa-clipboard-list me-2"></i>Allotments
                    </a>
                    <a class="nav-link" href="/admin/bookings">
                        <i class="fas fa-calendar-check me-2"></i>Bookings
                    </a>
                    <a class="nav-link logout-btn" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">
                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                    </a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 main-content">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2><i class="fas fa-building me-2"></i>Hostels Management</h2>
                    <button class="btn btn-primary" id="addHostelBtn">
                        <i class="fas fa-plus me-2"></i>Add New Hostel
                    </button>
                </div>
                
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Area</th>
                                        <th>Price/Month</th>
                                        <th>Available Rooms</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="hostelsTable">
                                    <tr>
                                        <td colspan="6" class="text-center">
                                            <div class="text-center">
                                                <div class="spinner-border text-primary" role="status">
                                                    <span class="visually-hidden">Loading...</span>
                                                </div>
                                                <p class="mt-2">Loading hostels...</p>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add/Edit Hostel Modal -->
    <div class="modal fade" id="hostelModal" tabindex="-1" aria-labelledby="hostelModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="hostelModalLabel">Add New Hostel</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="hostelForm">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="hostelName" class="form-label">Hostel Name *</label>
                                    <input type="text" class="form-control" id="hostelName" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="hostelArea" class="form-label">Area *</label>
                                    <select class="form-select" id="hostelArea" required>
                                        <option value="">Select Area</option>
                                        <option value="Bhadurgarh">Bhadurgarh</option>
                                        <option value="Phase 1">Phase 1</option>
                                        <option value="Phase 2">Phase 2</option>
                                        <option value="Near PUP">Near PUP</option>
                                        <option value="Patiala City">Patiala City</option>
                                        <option value="Campus">Campus</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="hostelPrice" class="form-label">Price per Month (â‚¹) *</label>
                                    <input type="number" class="form-control" id="hostelPrice" min="0" step="0.01" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="hostelRooms" class="form-label">Available Rooms *</label>
                                    <input type="number" class="form-control" id="hostelRooms" min="0" required>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="hostelTotalRooms" class="form-label">Total Rooms</label>
                                    <input type="number" class="form-control" id="hostelTotalRooms" min="0">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="hostelStatus" class="form-label">Status</label>
                                    <select class="form-select" id="hostelStatus">
                                        <option value="1">Active</option>
                                        <option value="0">Inactive</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="hostelDescription" class="form-label">Description</label>
                            <textarea class="form-control" id="hostelDescription" rows="3" placeholder="Describe the hostel facilities and environment"></textarea>
                        </div>
                        
                        <div class="mb-3">
                            <label for="hostelAmenities" class="form-label">Amenities</label>
                            <textarea class="form-control" id="hostelAmenities" rows="2" placeholder="e.g., WiFi, AC, Laundry, Parking, Security, Mess"></textarea>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="hostelContact" class="form-label">Contact Number</label>
                                    <input type="tel" class="form-control" id="hostelContact" placeholder="+91 9876543210">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="hostelLocation" class="form-label">Location</label>
                                    <input type="text" class="form-control" id="hostelLocation" placeholder="e.g., Near University Gate">
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="hostelAddress" class="form-label">Full Address</label>
                            <textarea class="form-control" id="hostelAddress" rows="2" placeholder="Complete address with landmark"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" id="hostelSubmitBtn">
                            <i class="fas fa-save me-2"></i>Save Hostel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Confirmation Modal -->
    <div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmModalLabel">Confirm Action</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="confirmModalBody">
                    Are you sure you want to perform this action?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmBtn">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        window.API_BASE_URL = '<%= apiBaseUrl %>';
        console.log('API_BASE_URL set to:', window.API_BASE_URL);
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" onload="console.log('Bootstrap loaded successfully')" onerror="console.error('Failed to load Bootstrap')"></script>
    <script src="/admin/js/admin-hostels.js"></script>
    <script>
        // Ensure Bootstrap is loaded before using it
        function waitForBootstrap(callback) {
            if (typeof bootstrap !== 'undefined') {
                callback();
            } else {
                setTimeout(() => waitForBootstrap(callback), 100);
            }
        }
        
        // Override the modal functions to wait for Bootstrap
        document.addEventListener('DOMContentLoaded', function() {
            waitForBootstrap(() => {
                console.log('Bootstrap is ready!');
                // Re-assign the functions to use the loaded Bootstrap
                if (window.showAddHostelModal) {
                    const originalShowAdd = window.showAddHostelModal;
                    window.showAddHostelModal = function() {
                        if (typeof bootstrap === 'undefined') {
                            alert('Bootstrap is still loading. Please wait a moment and try again.');
                            return;
                        }
                        originalShowAdd();
                    };
                }
            });
        });
    </script>

    <!-- Logout Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to logout?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmLogout">Logout</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
